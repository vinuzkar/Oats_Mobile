<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        
        <shape>
            
            <gradient
                android:startColor="#60c160" 
                android:endColor="#51a351"
                android:angle="270.0" />
            
            <stroke 
                android:width="1.0sp"
                android:color="#81cf81" />
            
            <corners android:radius="5.0dip" />
            
        </shape>
        
    </item>
	
	<item android:state_pressed="true" >
        
        <shape>
            
            <solid android:color="#51a251" />
            
            <stroke
                android:width="1.0sp"
                android:color="#81cf81" />
            
            <corners android:radius="5.0dip" />
            
        </shape>
        
    </item>
    
</selector>
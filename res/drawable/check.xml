<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item
        android:state_checked="false"
        android:state_pressed="false" >
        
        <shape>
            
            <gradient
                android:startColor="#0081cc" 
                android:endColor="#0055cc" 
                android:angle="270.0" />
            
            <stroke 
                android:width="0.5sp"
                android:color="#3389d6" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
    <item
        android:state_checked="false"
        android:state_pressed="true" >
        
        <shape>
            
            <solid android:color="#0044cc" />
            
            <stroke
                android:width="0.5sp"
                android:color="#3389d6" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
    <item
        android:state_checked="true"
        android:state_pressed="false" >
        
        <shape>
            
            <gradient
                android:startColor="#e95b57" 
                android:endColor="#bd362f"
                android:angle="270.0" />
            
            <stroke
                android:width="1.0sp" 
                android:color="#a73f3a" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
    <item
        android:state_checked="true"
        android:state_pressed="true" >
        
        <shape>
            
            <solid android:color="#bc362f" />
            
            <stroke 
                android:width="1.0sp"
                android:color="#a73f3a" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
</selector>
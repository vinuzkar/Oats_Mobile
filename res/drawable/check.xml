<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:state_checked="false" >
        
        <shape>
            
            <gradient
                android:startColor="#7c9638"
                android:endColor="#ffffffff"
                android:angle="270.0" />
            
            <stroke
                android:width="3.0sp"
                android:color="#ff000000" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
    <item
        android:state_pressed="true"
        android:state_checked="true" >
        
        <shape>
            
            <gradient
                android:startColor="#ffed3734" 
                android:endColor="#ffffffff"
                android:angle="270.0" />
            
            <stroke 
                android:width="3.0sp"
                android:color="#ff000000" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
    <item
        android:state_pressed="false"
        android:state_checked="false" >
        
        <shape>
            
            <gradient
                android:startColor="#ffa8cf45" 
                android:endColor="#ffffffff" 
                android:angle="270.0" />
            
            <stroke 
                android:width="3.0sp"
                android:color="#ff000000" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
    <item android:state_pressed="false" android:state_checked="true">
        
        <shape>
            
            <gradient
                android:startColor="#ffed3734" 
                android:endColor="#ffffffff"
                android:angle="270.0" />
            
            <stroke
                android:width="3.0sp" 
                android:color="#ff000000" />
            
            <corners android:radius="10.0dip" />
            
        </shape>
        
    </item>
    
</selector>